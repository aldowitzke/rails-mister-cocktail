<h1><%= @cocktail.name %></h1>

<ul>
  <% @cocktail.doses.each do |dose| %>
  <li>
    <p>Ingredient: <%= dose.ingredient.name %></p>
    <p>Description: <%= dose.description %></p>
  </li>
    <%= link_to "Delete dose", dose, method: :delete, data: { confirm: "Are you sure?"} %>
  <% end %>
</ul>

<!-- Form -->

<h1>Add a dose:</h1>

<%= simple_form_for [@cocktail, @dose] do |f| %>

<% if flash[:dose_errors] %>

<div class="errors-container">
  <ul>
    <% flash[:dose_errors].each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="form-inputs">
  <%= f.association :ingredient %>
  <%= f.input :description %>
</div>

<div class="form-actions">
  <%= f.button :submit %>
</div>


<% end %>

<p><%= link_to "Go back", cocktails_path %> |
  <%= link_to "Delete cocktail", @cocktail, method: :delete, data: { confirm: "Are you sure?" } %></p>


